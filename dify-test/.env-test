# ===== Required backends =====
DATABASE_URL=postgresql+psycopg://USER:PASSWORD@postgres-host:5432/dify
VECTOR_STORE=pgvector
PGVECTOR_CONNECTION_STRING=postgresql://USER:PASSWORD@postgres-host:5432/dify
REDIS_URL=redis://:PASSWORD@redis-host:6379/0

# ===== Public URLs (how web/app calls API) =====
CONSOLE_WEB_URL=https://your.domain
CONSOLE_API_URL=https://your.domain/api
APP_API_URL=https://your.domain/api
SERVICE_API_URL=https://your.domain/api
FILES_URL=https://your.domain

# ===== Security / behavior =====
SECRET_KEY=REPLACE_WITH_RANDOM_BASE64
LOG_LEVEL=INFO
MIGRATION_ENABLED=true

# ===== Storage =====
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/temp/api-storage

# ===== Ports (Supervisor reads these) =====
PORT_WEB=8080
PORT_API=5001
